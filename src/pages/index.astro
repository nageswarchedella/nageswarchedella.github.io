    {/* Add vertical spacing between sections */}

    <!-- ======================= -->
    <!-- Hero Section            -->
    <!-- ======================= -->
    <section class="text-center px-4">
      {/* Optional: Add an image here */}
      {
        (
          <img
            src="https://avatars.githubusercontent.com/u/50575185?v=4"
            alt={name}
            class="w-64 h-64 rounded-full mx-auto mb-6"
          />
        )
      }
      <h1
        class="text-4xl md:text-5xl font-bold mb-3 text-gray-900 dark:text-white"
      >
        {name}
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 mb-4">
        {title}
      </p>
      <p
        class="max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-400 mb-8"
      >
        {tagline}
      </p>
      <div class="flex justify-center space-x-4">
        <!-- <a
