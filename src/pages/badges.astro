const iframeWidth = 300;
const iframeHeight = 270;
const badgeHost = "https://www.credly.com";
const badgeIds = [
  "2c96222f-dc78-4597-a8f4-595130f11972",
  "82782e5b-3869-4b1b-9d4f-f29300d336ef",
  "4afac7a5-a040-47d0-9cb6-bc55f657955b",
  "e8988c11-7a1b-4f89-b63d-34868c04b2f8",
  "9672a295-fc6a-4feb-a510-707ae849e9c5",
  "00a0ac77-8e37-4035-8a29-d1d2cae1179b",
  "b3ae1509-567c-473c-97c6-bc0bbb8b4898",
  "817caeaf-9400-4d8d-82e0-23ce0e996c15",
  "ec4a06b9-d8eb-47cd-907c-307845620ebd",
  "e57b6457-f061-43bc-883b-b8318b77bf66",
  "cb209670-08c3-4152-896e-d077e916db8b",
];
import Layout from "../layouts/Layout.astro";
---

<Layout title="Badges">
  <div class="container mx-auto p-4">
    <p class="text-center">Here are some of the badges I have earned.</p>
  </div>
  <div class="hidden">
    <div
      id="badges-grid"
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4"
    >
      {
        badgeIds.map((badgeId) => (
          <div
            class="badge"
            data-iframe-width={iframeWidth}
            data-iframe-height={iframeHeight}
            data-share-badge-id={badgeId}
            data-share-badge-host={badgeHost}
          />
        ))
      }
    </div>
  </div>
</Layout>

<script async src="https://cdn.credly.com/assets/utilities/embed.js"></script>
